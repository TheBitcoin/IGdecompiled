<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_password_edit" android:layout_width="match_parent" android:layout_height="?android:attr/actionBarSize">
        <TextView android:id="@+id/tv_title_toolbar_password_edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/password_edit_title" style="@style/UptodownToolbarStyle"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/toolbar_password_edit">
        <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/margin_m" android:paddingTop="@dimen/margin_m" android:paddingRight="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/text_size_l" android:textColor="@color/text_primary" android:textColorHint="@color/main_light_grey" android:id="@+id/et_password_edit" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/password_edit_new" android:maxLength="@integer/max_length_username" android:drawablePadding="@dimen/margin_m" android:layout_centerVertical="true" android:inputType="textPassword" android:textCursorDrawable="@null" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/iv_password_edit" app:drawableStartCompat="@drawable/vector_password"/>
                <ImageView android:id="@+id/iv_password_edit" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_alignParentEnd="true" app:srcCompat="@drawable/vector_password_hidden"/>
            </RelativeLayout>
            <View android:background="@color/et_stroke_color" android:layout_width="match_parent" android:layout_height="1dp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <EditText android:textSize="@dimen/text_size_l" android:textColor="@color/text_primary" android:textColorHint="@color/main_light_grey" android:id="@+id/et_confirm_password_edit" android:background="@android:color/transparent" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/password_edit_new_confirm" android:maxLength="@integer/max_length_username" android:drawablePadding="@dimen/margin_m" android:layout_centerVertical="true" android:inputType="textPassword" android:textCursorDrawable="@null" android:layout_marginEnd="10dp" android:layout_toStartOf="@+id/iv_confirm_password_edit" app:drawableStartCompat="@drawable/vector_password"/>
                <ImageView android:id="@+id/iv_confirm_password_edit" android:layout_width="24dp" android:layout_height="24dp" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_alignParentEnd="true" app:srcCompat="@drawable/vector_password_hidden"/>
            </RelativeLayout>
            <View android:background="@color/et_stroke_color" android:layout_width="match_parent" android:layout_height="1dp"/>
            <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_min_chars_password_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_l" android:text="@string/validation_six_chars_min" android:maxLines="1" android:drawablePadding="@dimen/margin_s" app:drawableStartCompat="@drawable/vector_unchecked"/>
            <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_max_chars_password_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_s" android:text="@string/validation_hundred_chars_max" android:maxLines="1" android:drawablePadding="@dimen/margin_s" app:drawableStartCompat="@drawable/vector_unchecked"/>
            <TextView android:textSize="@dimen/text_size_m" android:textColor="@color/text_secundary" android:ellipsize="end" android:id="@+id/tv_equals_password_edit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_s" android:text="@string/validation_password_match" android:maxLines="1" android:drawablePadding="@dimen/margin_s" app:drawableStartCompat="@drawable/vector_unchecked"/>
            <TextView android:textSize="@dimen/text_size_l" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_password_edit_change" android:background="@drawable/ripple_blue_primary_button" android:paddingLeft="@dimen/margin_l" android:paddingTop="@dimen/margin_m" android:paddingRight="@dimen/margin_l" android:paddingBottom="@dimen/margin_m" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_l" android:text="@string/save" android:textAllCaps="true" android:textAlignment="center"/>
        </LinearLayout>
    </ScrollView>
    <include android:id="@+id/loading_view_password_edit" layout="@layout/core_loading_view"/>
</RelativeLayout>
