<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/light_grey">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/light_grey"/>
            <corners android:radius="@dimen/border_radius_s"/>
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="@dimen/border_radius_s"/>
        </shape>
    </item>
</ripple>
